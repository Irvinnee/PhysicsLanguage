$TIME = 10
$DELTA = 0.05

law damped_spring(particle p):
    float fx = -p->k * p->position[0]
    float damping = -p->b * p->velocity[0]
    float force = fx + damping
    float vx = p->velocity[0] + force
    float x = p->position[0] + vx * $DELTA
    p->velocity = [vx, 0, 0]
    p->position = [x, 0, 0]

