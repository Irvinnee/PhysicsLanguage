        p->velocity = [v1, 0, 0]
        q->velocity = [v2, 0, 0]

    float new_x = p->position[0] + p->velocity[0]
    p->position = [new_x, 0, 0]
    new_x = q->position[0] + q->velocity[0]
    q->position = [new_x, 0, 0]

